<script>
/* ================= GSAP FLIP ================= */
const card = document.querySelector(".flip-inner");

gsap.set(".back",{ rotationY:180 });

document.querySelector(".flip-card").addEventListener("mouseenter",()=>{
    gsap.to(card,{
        rotationY:180,
        duration:1.4,
        ease:"power4.out"
    });
});

document.querySelector(".flip-card").addEventListener("mouseleave",()=>{
    gsap.to(card,{
        rotationY:0,
        duration:1.3,
        ease:"power4.inOut"
    });
});
</script>

